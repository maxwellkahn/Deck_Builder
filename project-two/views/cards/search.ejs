<%- include('../partials/header') %>

<div>
    <form action="/cards/search" method="POST">
      <input type="text" name="card" placeholder="Search a Card" />
      <button type="submit">Search</button>
    </form>
  </div>
  <div class="search">
    <% if (cardSearch) { %> <%= cardSearch.name %>
    <br />
    <img src="<%= cardSearch.image_uris.normal %>" alt="<%= cardSearch.name %>" />
    <form action="/cards" method="POST">
      <input type="hidden" name="name" value="<%= cardSearch.name %>" />
      <input
        type="hidden"
        name="image_uri"
        value="<%= cardSearch.image_uris.small %>"
      />
      <button type="submit">Add to Collection</button>
    </form>
    <% } else { %>
    <h3>search a card</h3>
    <% } %>
  </div>





<%- include('../partials/footer') %>